{% include 'admin/basics/top.html.twig' %}

<body>
{% include 'admin/basics/header.html.twig' %}
<!-- Page container -->
<div class="page-container">

	<!-- Page content -->
	<div class="page-content">

        {% include 'admin/basics/menu.html.twig' %}

		<!-- Main content -->
		<div class="content-wrapper">
			<!-- Content area -->
			<div class="content">
				<!-- Dashboard content -->
				<div class="row">
					<div class="col-lg-12">

						<!-- Lista usuários -->
						<div class="panel panel-flat">
							<div class="panel-heading">
								<h5 class="panel-title">Edição de Caracter Especial</h5>
							</div>
							<div class="row">
								<div class="col-md-10 col-md-offset-1">
									<form action="{{ route('admin.caracteresEspeciais.store') }}" method="post" enctype="multipart/form-data">
										<div class="panel panel-flat">
											<div class="panel-body">

												<fieldset class="content-group">
													<div class="form-group col-md-6">
														<label for="caracter" class="control-label">Caractere:</label>
														<input name="caracter" id="caracter" type="text" class="form-control" placeholder="Caractere" value="{{ caracteresEspeciais.caracter }}" >
													</div>
													<div class="form-group col-md-6">
														<label for="tipo" class="control-label">Tipo:</label>
														<select class="form-control" name="tipo" id="tipo">
															<option>Selecione o tipo</option>
															<option value="0" {% if (caracteresEspeciais.tipo==0) %}selected{% endif %}>Foliar</option>
															<option value="1" {% if (caracteresEspeciais.tipo==1) %}selected{% endif %}>Casca</option>
														</select>
													</div>
												</fieldset>

												<button type="submit" class="btn bg-teal-400 pull-right"><i class="fa fa-pencil-square-o position-left"></i> Salvar </button>
											</div>
										</div>
									</form>
								</div>
							</div>
						</div>
						<!-- /Lista usuários -->
					</div>
				</div>
				<!-- /dashboard content -->
                {% include 'admin/basics/rodape.html.twig' %}

			</div>
			<!-- /content area -->

		</div>
		<!-- /main content -->

	</div>
	<!-- /page content -->

</div>
<!-- /page container -->

</body>
</html>
