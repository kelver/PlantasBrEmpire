<body>
{% include 'admin/basics/header.html.twig' %}
<!-- Page container -->
<div class="page-container">

	<!-- Page content -->
	<div class="page-content">

        {% include 'admin/basics/menu.html.twig' %}

		<!-- Main content -->
		<div class="content-wrapper">
			<!-- Content area -->
			<div class="content">
				<!-- Dashboard content -->
				<div class="row">
					<div class="col-lg-12">

						<!-- Lista usuários -->
						<div class="panel panel-flat">
							<div class="panel-heading">
								<h5 class="panel-title">Cadastrar Planta</h5>
							</div>
							<div class="row">
								<div class="col-md-10 col-md-offset-1">
									<form action="{{ route('admin.paises.store') }}" method="post">
										<div class="panel panel-flat">
											<div class="panel-body">

												<fieldset class="content-group">
													<legend class="text-bold">Arquivos de mídia</legend>
													<div class="form-group">
														<label for="fotos" class="control-label">Fotos:</label>
														<div class="input-group file-caption-main">
															<div tabindex="500" class="form-control file-caption  kv-fileinput-caption">
																<div class="file-caption-name" title=""></div>
															</div>

															<div class="input-group-btn">
																<button type="button" tabindex="500" title="Clear selected files" class="btn btn-default fileinput-remove fileinput-remove-button"><i class="icon-cross3"></i>  <span class="hidden-xs">Remover</span></button>
																<button type="button" tabindex="500" title="Abort ongoing upload" class="btn btn-default hide fileinput-cancel fileinput-cancel-button"><i class="glyphicon glyphicon-ban-circle"></i>  <span class="hidden-xs">Cancel</span></button>
																<button type="button" tabindex="500" title="Upload selected files" class="btn btn-default fileinput-upload fileinput-upload-button"><i class="icon-file-upload2"></i>  <span class="hidden-xs">Upload</span></button>
																<div tabindex="500" class="btn btn-primary btn-file"><i class="icon-file-plus"></i>  <span class="hidden-xs">Buscar</span><input class="file-input" multiple="multiple" id="1507508615242" type="file"></div>
															</div>
														</div>
													</div>

													<div class="form-group">
														<label for="video" class="control-label">Vídeo:</label>
														<div class="input-group col-md-12">
															<input class="col-md-11" id="video" placeholder="Vídeo" name="video">
															<button type="button" tabindex="500" title="Upload selected files" class="btn btn-default fileinput-upload fileinput-upload-button"><i class="icon-file-upload2"></i>  <span class="hidden-xs">Upload</span></button>
														</div>
												</fieldset>



												<fieldset class="content-group">
													<legend class="text-bold">Dados de Assinatura</legend>

													<div class="form-group col-md-6">
														<label class="display-block">Data do pagamento </label>
														<input class="form-control pickadate-translated_BR" name="dataAssinatura" id="dataAssinatura" type="text">
													</div>

													<div class="form-group col-md-6">
														<label class="display-block">Período da assinatura </label>
														<select data-placeholder="Selecione o período" class="select" name="periodoAssinatura" id="periodoAssinatura">
															<option></option>
															<option value="0">Anual</option>
															<option value="1">Mensal</option>
														</select>
													</div>
												</fieldset>

												<button type="submit" class="btn bg-teal-400 pull-right"><i class="fa fa-pencil-square-o position-left"></i> Salvar </button>
											</div>
										</div>
									</form>
								</div>
							</div>
						</div>
						<!-- /Lista usuários -->
					</div>
				</div>
				<!-- /dashboard content -->


                {% include 'admin/basics/rodape.html.twig' %}

			</div>
			<!-- /content area -->

		</div>
		<!-- /main content -->

	</div>
	<!-- /page content -->

</div>
