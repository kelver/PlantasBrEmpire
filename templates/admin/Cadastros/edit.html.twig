{% include 'admin/basics/top.html.twig' %}

<body>
{% include 'admin/basics/header.html.twig' %}
<!-- Page container -->
<div class="page-container">

	<!-- Page content -->
	<div class="page-content">

        {% include 'admin/basics/menu.html.twig' %}

		<!-- Main content -->
		<div class="content-wrapper">
			<!-- Content area -->
			<div class="content">
				<!-- Dashboard content -->
				<div class="row">
					<div class="col-lg-12">

						<!-- Lista usuários -->
						<div class="panel panel-flat">
							<div class="panel-heading">
								<h5 class="panel-title">Editar Cadastros</h5>
							</div>
							<div class="row">
								<div class="col-md-10 col-md-offset-1">
									<form action="{{ route('admin.cadastros.update', {'id': usuario.id}) }}" method="post">
										<div class="panel panel-flat">
											<div class="panel-body">

												<fieldset class="content-group">
													<legend class="text-bold">Dados Pessoais</legend>
													<div class="form-group col-md-12">
														<label for="nome" class="control-label">Nome:</label>
														<input name="nome" id="nome" type="text" class="form-control" placeholder="Nome" value="{{ pessoa.nome }}">
													</div>
													<div class="form-group col-md-6">
														<label for="telefone" class="control-label">Telefone:</label>
														<input name="telefone" id="telefone" type="text" class="form-control" placeholder="Telefone" value="{{ pessoa.telefone }}">
													</div>
													<div class="form-group col-md-6">
														<label for="celular" class="control-label">Celular:</label>
														<input name="celular" id="celular" type="text" class="form-control" placeholder="Celular" value="{{ pessoa.celular }}">
													</div>
													<div class="form-group col-md-6">
														<label for="email" class="control-label">E-Mail:</label>
														<input name="email" id="email" type="text" class="form-control" placeholder="E-Mail" value="{{ pessoa.email }}">
													</div>
													<div class="form-group col-md-6">
														<label for="senha" class="control-label">Senha: <small><code>Preencha apenas se quiser alterar a senha</code></small></label>
														<input name="senha" id="senha" type="text" class="form-control" placeholder="Senha" value="">
													</div>
												</fieldset>

												<fieldset class="content-group">
													<legend class="text-bold">Dados de Assinatura</legend>

													<div class="form-group col-md-6">
														<label class="display-block">Data do pagamento </label>
														<input class="form-control pickadate-translated_BR" value="{{ usuario.dataAssinatura|date("d/m/Y") }}" name="dataAssinatura" id="dataAssinatura" type="text">
													</div>

													<div class="form-group col-md-6">
														<label class="display-block">Período da assinatura </label>
														<select data-placeholder="Selecione o período" class="select" name="periodoAssinatura" id="periodoAssinatura">
															<option></option>
															<option value="0" {% if usuario.periodoAssinatura == 0 %} selected {% endif %}>Anual</option>
															<option value="1" {% if usuario.periodoAssinatura == 1 %} selected {% endif %}>Mensal</option>
														</select>
													</div>
												</fieldset>

												<button type="submit" class="btn bg-teal-400 pull-right"><i class="fa fa-pencil-square-o position-left"></i> Salvar </button>
											</div>
										</div>
									</form>
									<div><br><br><br><br><br><br><br><br></div>
								</div>
							</div>
						</div>
						<!-- /Lista usuários -->
					</div>
				</div>
				<!-- /dashboard content -->


                {% include 'admin/basics/rodape.html.twig' %}

			</div>
			<!-- /content area -->

		</div>
		<!-- /main content -->

	</div>
	<!-- /page content -->

</div>
<!-- /page container -->

</body>
</html>
