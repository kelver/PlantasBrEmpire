{% include 'admin/basics/top.html.twig' %}

<body>
{% include 'admin/basics/header.html.twig' %}
<!-- Page container -->
<div class="page-container">

	<!-- Page content -->
	<div class="page-content">

        {% include 'admin/basics/menu.html.twig' %}

		<!-- Main content -->
		<div class="content-wrapper">
			<!-- Content area -->
			<div class="content">
				<!-- Dashboard content -->
				<div class="row">
					<div class="col-lg-12">

						<!-- Lista usuários -->
						<div class="panel panel-flat">
							<div class="panel-heading">
								<h5 class="panel-title">Edição de Cadastro</h5>
							</div>
							<div class="row">
								<div class="col-md-10 col-md-offset-1">
									<form action="{{ route('admin.cadastros.update', {'id': cadastros.id}) }}" method="post">
										<div class="panel panel-flat">
											<div class="panel-body">

												<fieldset class="content-group">
													<legend class="text-bold">Dados Pessoais</legend>

													<div class="form-group">
														<label for="nome" class="control-label">Nome:</label>
														<input name="nome" id="nome" type="text" class="form-control" placeholder="Eugene Kopyov" value="{{ cadastros.Pessoa.nome }}">
													</div>

													<div class="form-group">
														<div class="col-lg-12">
															<div class="row">
																<div class="col-md-6">
																	<label for="email" class="control-label">E-Mail</label>
																	<input name="email" id="email" type="text" class="form-control" placeholder="E-Mail" value="{{ cadastros.Pessoa.email }}">
																</div>

																<div class="col-md-6">
																	<label for="telefone" class="control-label">Telefone</label>
																	<input name="telefone" id="telefone" data-mask="(99) 99999-9999" type="text" class="form-control" placeholder="Telefone" value="{{ cadastros.Pessoa.telefone }}">
																</div>
															</div>
														</div>
													</div>
												</fieldset>

												<fieldset class="content-group">
													<legend class="text-bold">Dados de usuário <smal>Altere apenas se necessário</smal></legend>

													<div class="form-group">
														<div class="col-lg-12">
															<div class="row">
																<div class="col-md-6">
																	<label for="usuario" class="control-label">Usuário</label>
																	<input name="usuario" id="usuario" type="text" class="form-control" placeholder="Usuario" value="{{ cadastros.usuario }}">
																</div>

																<div class="col-md-6">
																	<label for="senha" class="control-label">Senha</label>
																	<input name="senha" id="senha" type="password" class="form-control" placeholder="Senha">
																</div>
															</div>
														</div>
													</div>
												</fieldset>

												<button type="submit" class="btn bg-teal-400 pull-right"><i class="fa fa-pencil-square-o position-left"></i> Salvar </button>
											</div>
										</div>
									</form>
								</div>
							</div>
						</div>
						<!-- /Lista usuários -->
					</div>
				</div>
				<!-- /dashboard content -->


                {% include 'admin/basics/rodape.html.twig' %}

			</div>
			<!-- /content area -->

		</div>
		<!-- /main content -->

	</div>
	<!-- /page content -->

</div>
<!-- /page container -->

</body>
</html>
