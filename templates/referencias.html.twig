                    </div>
                </div>
                {% else %}
                <div class="col-md-12">
                    <div class="well well-sm">
                        <table class="table table-hover table-bordered table-colored">
                        {% for referencia in referencias %}
                            <tr>
                                <td>
                                    <div class="col-md-12">{{ referencia.texto }}</div>
                                    <div class="col-md-12"><a href="{{ referencia.link }}" target="_blank">{{ referencia.link }}</a></div>
