                                    <div class="col-md-6 col-sm-12">
                                        <label>Nome Popular</label>
                                        <input class="form-control" id="nome-popular" name="nome-popular" placeholder="Nome Popular" required="" type="email">
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <label>Sinonímia</label>
                                        <input class="form-control" id="sinonimia" name="sinonimia" placeholder="Sinonímia" required="" type="email">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <button type="submit" class="btn btn-group btn-default btn-animated pull-right">Buscar <i class="fa fa-check"></i></button>
                                    </div>
                                </div>
                            </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
