                                    <div class="col-md-6 col-sm-12">
                                        <label>Gênero</label>
                                        <input class="form-control" id="genero" name="genero" placeholder="Gênero" required="" type="email">
                                    </div>
                                    <div class="col-md-6 col-sm-12">
                                        <label>Espécie</label>
                                        <input class="form-control" id="especie" name="especie" placeholder="Espécie" required="" type="email">
                                    </div>
                                </div>
